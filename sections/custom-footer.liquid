<div class="container-delivery_intel">
  <div class="container-delivery_intel_banner">
  {%for block in section.blocks %}
		<div class="title-with-image_container" >
        	<h2 class ="title-with-image_title" >{{block.settings.heading}}</h2>
      		<img class ="title-with-image_img" src="{{block.settings.image-icon-footer | img_url:'master'}}"/>
       </div>
  {%endfor%}
  </div>
</div>


{% style %}

.container-delivery_intel{
	width : 100%;
	height : 185px;
	display : flex;
	justify-content: center;
	align-items: center
	margin-top:100px;
}

.container-delivery_intel_banner{
	display:flex;
	flex-direction:row;
	width : 80%;
	height : 100%;
	display:flex;
	flex-direction:row;
	justify-content : space-around;
	margin: 30px 40px;
	transition : 0.2s all;
	background-color:  rgba(185, 181, 181, 0.3);
	border : 1px solid rgba(27,27,27,0);
	border-radius : 16px;
}

.title-with-image_container {
	width : 22%;
	heigth: 95%;
	display : flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	
}

.title-with-image_title{
	font-size : 16px;
	order : 0;
	text-align: center;
	white-space: prewrap;
}

.title-with-image_img{
	align-self:center;
	width: 14%;
	height:auto;
	order:-1;
	
}
.card-category_container:hover > .container-delivery_intel{
	margin-top:0px;
	
}

@media only screen and (max-width: 900px) {
.container-delivery_intel{
	width : 100%;
	height : auto;
	display : flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
	margin-top:100px;
}
.container-delivery_intel_banner{
	width: 90%;
	height : auto;
	flex-direction : column;
}
}

{% endstyle %}

{% schema %}
    {
      "name": "custom-footer",
		"class" : "section",
        "blocks":[
                    {
                        "type":"image",
                        "name":"custom-footer",
                        "settings":[
                                    {
                                     "type":"image_picker",
                                     "label":"your image",
                                     "id":"image-icon-footer"
                                    },
                                    {
                                     "type":"text",
                                     "label":"headline",
                                     "id":"heading"
                                    }
                                    ]
                    }
                    ],
        "presets" : [
                            {
                                "category":"image",
                                "name": "custom-footer" 
                            }
                            ]
}
{% endschema %}