}

.title-with-image_title{

}

.title-with-image_img{
	
	
}

{% endstyle %}

{% schema %}
    {
      "name": "custom-footer",
		"class" : "section",
        "blocks":[
                    {
                        "type":"image",
                        "name":"custom-footer",
                        "settings":[
                                    {
                                     "type":"image_picker",
                                     "label":"your image",
                                     "id":"image-icon-footer"
                                    },
                                    {
                                     "type":"text",
                                     "label":"headline",
                                     "id":"heading"
                                    }
                                    ]
                    }
                    ],
        "presets" : [
                            {
                                "category":"image",
                                "name": "custom-footer" 
                            }
                            ]
}
{% endschema %}