<div class="title-with-image_container" >
  
<h2 class ="title-with-image_title" >{{section.settings.heading}}</h2>

{%for block in section.blocks %}

	<img class ="title-with-image_img" src="{{block.settings.image | img_url:'master'}}"/>

{%endfor%}
  
</div>

{% style %}

.title-with-image_container {
	width : 100%;
	height : auto;
	display : flex;
	justify-content : center;
	text-align: -webkit-center;
}

.title-with-image_title{
	font-size : 36px;
	order: -3;
}
.title-with-image_img{
	width:100%;
	height:auto;
	order : -1;
	margin : 0;
}

{% endstyle %}

{% schema %}
	{
      "name": "title with image",
      "settings": [
                      {
                        "type":"text",
                        "label":"headline",
                        "id":"heading"
                      }
                  ],
		"blocks":[
					{
						"type":"image",
						"name":"image block",
						"settings":[
									{
										"type":"image_picker",
										"label":"your image",
										"id":"image"
									}
								]
					}
					],
		"presets" : [
					{
						"category":"image",
						"name": "title with image" 
					}
					]

	}
{% endschema %}
