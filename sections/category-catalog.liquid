
{%for block in section.blocks %}
	<div class="catalog-category_container" >

      <h2 class ="catalog-category_title" >{{block.settings.heading}}</h2>
     <img class ="catalog-category_img" src="{{block.settings.image-title | img_url:'master'}}"/> 
      <a class ="catalog-category_img-link" href="{{block.settings.link-1}}"><img class ="catalog-category_img" src="{{block.settings.image-catalog | img_url:'master'}}"/></a>
      
	</div>
{%endfor%}



{% style %}

.catalog-category_container {
text-align: center
}

{% endstyle %}



{% schema %}
{
    "name": "category catalog",
    "class" : "section",
    "settings": [
        {
            "type":"text",
            "label":"title catalog",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"title catalog",
            "settings":[
                        {
                            "type":"text",
                            "label":"your image",
                            "id":"heading"
                        },
						{
                            "type":"image_picker",
                            "label":"your image",
                            "id":"image-title"
                        },
						{
                            "type":"image_picker",
                            "label":"your image",
                            "id":"image-catalog"
                        },
						{
                            "type": "url",
                            "id": "link-1",
                            "label": "Link URL 1"
                            
                        }
                    ]
     } 
],
"presets" : [
					{
						"category":"image",
						"name": "catalog category" 
					}
					]

}                 
{% endschema %}
