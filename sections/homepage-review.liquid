<div class="homepage-review_container" >
  
  {%for block in section.blocks %}
   <div class="homepage-review_card-container">  
	<p class ="homepage-review_title" >{{block.settings.heading}}</p>
  	<p class = "homepage-review_author">{{block.settings.author}}</p>
	<p class = "homepage-review_stars-icon">{{block.settings.stars-icon}}</p>
	<img class ="homepage-review_img" src="{{block.settings.image | img_url:'master'}}"/>
	</div>
  {%endfor%}
</div>

{% style %}

.homepage-review_container {
	width : 100%;
	height : auto; 
	display: flex;
	flex-direction:column;
	
}
.homepage-review_container:nth-child(2n){
	align-content: start;
}
.homepage-review_container:nth-child(2n+1){
	align-content: end;
}
.homepage-review_card-container{
	width : 40%;
	height:auto;
	display:flex;
	flex-direction:column;
	align-items: center;
}

.homepage-review_title{
	font-size:36px;
	font-weight:500;
}

.homepage-review_author{
	font-size: 12px;
	font-weight:300;
}

{% endstyle %}

{% schema %}
  {
  "name": "text icon",
"class" : "section",
"settings": [
  {
      "type":"text",
      "label":"text icon",
      "id":"heading"
  }
],
  "blocks": [
      {
        "type":"image",
        "name": "homepage review",
        "settings": [
                        {
                        "type":"text",
                        "label":"headline",
                        "id":"heading"
                        },
                        {
                        "type":"richtext",
                        "label":"headline",
                        "id":"author"
                        },
                        {
                        "type":"text",
                        "label":"rate",
                        "id":"stars-icon"
                        },
                        {
                        "type":"image_picker",
                        "label":"your image",
                        "id":"image"
                        }
  					]
  				}
                  ],

          "presets" : [
                      {
                          "category":"image",
                          "name": "homepage review" 
                      }
                      ]

	
  }
{% endschema %}


