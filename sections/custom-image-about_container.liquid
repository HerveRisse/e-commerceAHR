                                     "type":"image_picker",
                                     "label":"your image",
                                     "id":"image-icon-footer"
                                    },
                                    {
                                     "type":"text",
                                     "label":"headline",
                                     "id":"heading"
                                    }
                                    ]
                    }
                    ],
        "presets" : [
                            {
                                "category":"image",
                                "name": "custom-iac2" 
                            }
                            ]
}
{% endschema %}



