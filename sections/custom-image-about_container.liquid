
  <div class="image-about_container">
  {%for block in section.blocks %}
		<div class="image-about_item" >
        	<h3 class ="titre-about_hover" >{{block.settings.heading}}</h3>
      		<img class ="image-about_hover" src="{{block.settings.image-icon-footer | img_url:'master'}}"/>
       </div>
  {%endfor%}
  </div>





{% stylesheet %}
.image-about_container{
	width:100vw;
	height:1800px;
	display:flex;
	flex-direction: column;
	align-items:center;
	align-content: center;
	justify-content:flex-start;
	flex-wrap : wrap;
	gap:20px;
}

.image-about_item{
	width:42%;
	height:auto;
	position: relative;

}
.titre-about_hover{
	width : 100%;
	height: 100%;
	display: flex;
	justify-content : center;
	align-items: center;
	background-color: rgba(27,27,27,0);
	transition : 0.3s 0.2s all;
	position: absolute;
	top : 0;
	z-index : 1000;
	color:#fff;
	margin:0;
	opacity:0;
	font-size:16px;
}
.image-about_hover{
	width : 100%;
	height: 100%;
	z-index: 500;
}
.titre-about_hover:hover{
	background-color: rgba(27,27,27,0.7);
	opacity:1;
}

{% endstylesheet %}



{% schema %}
